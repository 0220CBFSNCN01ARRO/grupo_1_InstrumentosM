<!-- HEAD -->
<%- include('./partials/head') %>
<!-- HEADER -->
<%- include('./partials/header') %>
<div class="container">
    <strong><h5 style="color: white; text-decoration: underline;"><i class="fas fa-play"></i> Catalogo:</h5></strong>
    <div class="row">
        <% for (producto of productos){
            let image = JSON.parse(producto.image) %>
        <div class="col-12 col-sm-6 col-lg-3 py-2">
            <div class="card text-white bg-secondary mb-3 h-100">
                <a href="/products/<%= producto.id %>" style="color: black;">
                        <img class="card-img-top img-fluid" src="/images/imgInstrumentos/<%=image[0]%>" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title"><%= producto.name %></h5>
                        <h5 class="card-title text-right">$<%= toThousand(producto.price) %></h5>
                    </div>
                </a>
                <div class="card-footer bg-light">
                    <small class="text-muted text-capitalize"><%= producto.category %></small>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</div>
<!-- FOOTER -->
<%- include('./partials/footer') %>