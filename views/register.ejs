<!-- HEAD -->
<%- include('./partials/head') %>
<!-- HEADER -->
<%- include('./partials/header') %>
  <section class="container">
    <div class="row" style="width: 100%;">
      <div class="col-12 col-sm-8 py-3 my-3">
        <strong><h2 style="text-decoration: underline; color: white;" class="text-center"><i class="far fa-play-circle"></i>Registro:</h2></strong>
        <form action="/register" enctype="multipart/form-data" name="formUserAdd" method="post" class="form-horizontal w-100 py-3 my-3">
          <div class="form-group col-sm-10">
            <label for="firstName" class=" control-label text-light">Nombre:</label>
            <input type="text" class="form-control" id="firstName" name="firstName" placeholder="Nombre" required>
          </div>
          <div class="form-group col-sm-10">
            <label for="lastName" class="control-label text-light">Apellido:</label>
            <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Apellido" required>
          </div>
          <div class="form-group col-sm-10">
            <label for="email" class="control-label text-light">Email:</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="example@example.com" required>
          </div>
          <div class="form-group col-sm-10">
            <label for="pass" class="control-label text-light">Contraseña:</label>
            <input type="password" class="form-control" id="pass" name="pass" placeholder="Contraseña" required>
            <small class="text-muted"> Tu contraseña debe contener 8-20 carácteres de
                largo, una letra y un número. No incluir: espacios, carácteres especiales, emojis.</small>
          </div>
          <div class="form-group col-sm-10">
            <label for="repass" class="control-label text-light">Confirmar
              contraseña:</label>
            <input type="password" class="form-control" id="repass" name="repass" placeholder="Confirmar contraseña" required>
          </div>
          <div class="col-12 col-md-6 form-group">
            <div class="custom-file">
                <input type="file" class="custom-file-input" name="avatar" max="3" id="avatar" accept="image/x-png,image/gif,image/jpeg" required>
                <label class="custom-file-label" for="avatar">Elegir avatar</label>
            </div>
        </div>
          <div class="form-group d-flex justify-content-between">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-secondary btn-sm w-100 my-3">Registrarme</button>
              <div class="text-center border rounded">
                <p class="text-light"><strong>O también podes ingresar con:</strong></p>
                <!--Facebook-->
                <button type="button" class="btn btn-fb text-light"><i class="fab fa-facebook-f pr-1"></i>
                  Facebook</button>
                <!--Google-->
                <button type="button" class="btn btn-gplus text-light"><i class="fab fa-google-plus-g pr-1"></i> Google</button>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="col-12 col-sm-4 align-self-center">
        <div class="d-flex nietzsche my-auto flex-column">
          <h3 class="text-muted">
            "Without music, life would be a mistake"
          </h3>
          <p class="text-muted text-right mr-5">
            Friedrich Nietzsche
          </p>
        </div>
      </div>
    </div>
  </section>
  <!--Frase-->

  <!-- FOOTER -->
  <%- include('./partials/footer') %>