<!-- HEAD -->
<%- include('./partials/head') %>
<!-- HEADER -->
<%- include('./partials/header') %>
  <section>
    <div class="row" style="width: 100%;">
      <div class="col-12 col-sm-8 ">
        <br>
        <form class="form-horizontal w-100">
          <p class="text-center text-uppercase text-light ">REGISTRO</p>
          <div class="form-group">
            <label for="inputNombre" class="col-sm-2 control-label text-light">Nombre</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="inputNombre" placeholder="Nombre" required>
            </div>
          </div>
          <div class="form-group">
            <label for="inputApellido" class="col-sm-2 control-label text-light">Apellido</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="inputApellido" placeholder="Apellido" required>
            </div>
          </div>
          <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label text-light">Email</label>
            <div class="col-sm-10">
              <input type="email" class="form-control" id="inputEmail3" placeholder="Example@gmail.com" required>
              <small id="helpBlock2" class="help-block text-light">Nunca compartas tus datos</small>
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label text-light">Contraseña</label>
            <div class="col-sm-10">
              <input type="password" class="form-control" id="inputPassword3" placeholder="Contraseña" required>
              <small id="helpBlock2" class="help-block text-light "> Tu contraseña debe contener 8-20 carácteres de
                largo,contener letras y números, no espacios, carácteres especiales, o emojis.</small>
            </div>
          </div>
          <div class="form-group">
            <label for="inputConfirmPassword3" class="col-sm-2 col-md-6 col-lg-4 control-label text-light">Confirmar
              contraseña</label>
            <div class="col-sm-10">
              <input type="password" class="form-control" id="inputConfirmPassword3" placeholder="Confirmar contraseña"
                required>
            </div>
          </div>
          <div class="form-group d-flex justify-content-between">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-secondary btn-sm w-100">Ingresar</button>
              <hr>
              <div class="text-center border rounded-top">
                <p class="text-light"><strong>O también podes ingresar con:</strong></p>
  
                <!--Facebook-->
                <button type="button" class="btn btn-fb text-light"><i class="fab fa-facebook-f pr-1"></i>
                  Facebook</button>
                <!--Google-->
                <button type="button" class="btn btn-gplus text-light"><i class="fab fa-google-plus-g pr-1"></i> Google
                  +</button>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class=" col-sm-4 fraseNietzsche">
        <div class="container nietzsche">
          <h3 class="text-muted">
            "Without music, life would be a mistake"
          </h3>
          <p class="text-muted text-right mr-5">
            Friedrich Nietzsche
          </p>
        </div>
      </div>
    </div>
  </section>
  <!--Frase-->
  <!-- FOOTER -->
  <%- include('./partials/footer') %>