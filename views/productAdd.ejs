                <!--Formulario de carga-->
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-6 text-light ">
                            <label for="inputnombreProducto">nombreProducto</label>
                            <input type="text" class="form-control" id="inputnombreProducto"
                                placeholder="Guitarra acústica" required>
                        </div>
                        <div class="form-group col-md-6 text-light ">
                            <label for="inputDescripProducto">descripciónProducto</label>
                            <textarea class="form-control " rows="4"
                                placeholder="Guitarra acústica fenders, seis cuerdas,con micrófonos integrados..."
                                required id="inputDescripProducto"></textarea>
                        </div>
                        <div class="form-group col-md-6 text-light">
                            <label for="inputidProducto">idProducto</label>
                            <input type="password" class="form-control" id="inputidProducto"
                                placeholder="GA21582 (lista de productos del proveedor)" required>
                        </div>
                    </div>
                    <div class="form-group text-light">
                        <label for="inputPrecio">Precio unitario</label>
                        <input type="text" class="form-control" id="inputPrecio" placeholder="$15.000" required>
                    </div>
                    <div class="form-group text-light">
                        <label for="inputSerialProducto">serialProducto</label>
                        <input type="text" class="form-control" id="inputSerialProducto"
                            placeholder="GuitarraAcuFenders" required>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6 text-light">
                            <label for="inputCategoriaProducto">Categorias</label>
                            <select id="inputCategoriaProducto" class="custom-select" required>
                                <option selected disabled value></option>
                                <option>Accesorios</option>
                                <option selected>Guitarras</option>
                                <option>Baterias</option>
                                <option>Bajos</option>
                                <option>Pianos</option>
                        </div>
                        </select>

                    </div>
                    <div class="form-group col-md-2 text-light">
                        <label for="inputCantidad">Cantidad</label>
                        <input type="number" class="form-control" id="inputCantidad" placeholder="8">
                    </div>
            </div>
                   <!--Carga de imagen-->
                   <img src="fileInput" class="rounded float-left text-light" alt="Imagen cargada">
                   <div class="input-group mb-4" >
                    <div class="input-group-prepend">
                        <span class="input-group-text">Carga tu imagen</span>
                    </div>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="fileInput" aria-describedby="fileInput">
                        <label class="custom-file-label" for="fileInput">imagenProducto</label>
                    </div>
                </div>

            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label text-light" for="gridCheck">
                        Marcar si completo correctamente
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-secondary" id="dt-all-checkbox">Agregar</button>
            </form>
