                <!--Formulario de carga-->
                <form action='/products/create' method="POST" enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="form-group col-md-6 text-light ">
                            <label for="inputnombreProducto">nombreProducto</label>
                            <input type="text" class="form-control"  name="name" id="inputnombreProducto"
                                placeholder="Guitarra acústica" required>
                        </div>
                        <div class="form-group col-md-6 text-light ">
                            <label for="inputDescripProducto">descripciónProducto</label>
                            <textarea class="form-control " rows="4"
                                placeholder="Guitarra acústica fenders, seis cuerdas,con micrófonos integrados..."
                                required name="description" id="inputDescripProducto"></textarea>
                        </div>
                        <div class="form-group col-md-6 text-light">
                            <label for="inputidProducto">idProducto</label>
                            <input type="text" class="form-control" id="inputidProducto"
                                placeholder="GA21582 (lista de productos del proveedor)" required>
                        </div>
                    </div>
                    <div class="form-group text-light">
                        <label for="inputPrecio">Precio unitario</label>
                        <input type="text" class="form-control" id="inputPrecio" name="price" placeholder="$15.000" required>
                    </div>
                    <div class="form-group text-light">
                        <label for="inputSerialProducto">serialProducto</label>
                        <input type="text" class="form-control" id="inputSerialProducto"
                            placeholder="GuitarraAcuFenders" name="serialNumber" required>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6 text-light">
                            <label for="inputCategoriaProducto">Categorias</label>
                            <select id="inputCategoriaProducto" class="custom-select" name="category" required>
                                <option selected disabled value></option>
                                <option>Accesorios</option>
                                <option selected>Guitarras</option>
                                <option>Baterias</option>
                                <option>Bajos</option>
                                <option>Pianos</option>
                        </div>
                      </div>
                        </select>

                    </div>
                    
                    <div class="form-group col-md-2 text-light">
                        <label for="inputCantidad">Cantidad</label>
                        <input type="number" class="form-control" id="inputCantidad" placeholder="8">
                    </div>
                    <div class="form-group col-md-2 text-light">
                      <label for="inputCantidad">Descuento</label>
                      <input type="number" class="form-control" id="inputCantidad" name="discount" placeholder="20%">
                  </div>
            </div>
            <div class="form-row">
              <div class="form-group col-md-6 text-light">
                  <label for="inputSubCategoriaProducto">subCategorias</label>
                  <select id="inputSubCategoriaProducto" class="custom-select" name="subCategory"  required>
                      <option selected value disabled></option>
                      <option>Criolla</option>
                      <option selected>Electrica</option>
                      <option>Electroacustica</option>
                      
              </div>
            </div>
              </select>

          </div>
